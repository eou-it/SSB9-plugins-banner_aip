package net.hedtech.banner.aip.post.grouppost

import groovy.transform.EqualsAndHashCode
import groovy.transform.ToString

import javax.persistence.*

/**
 * Action Item Post Selection Detail
 */
@Entity
@Table(name = "GVQ_ACTION_ITEM_POST_POPUL")
@ToString(includeNames = true, ignoreNulls = true)
@EqualsAndHashCode(includeFields = true)
@NamedQueries(value = [
        @NamedQuery(name = "ActionItemPostSelectionDetail.fetchSelectionIds",
                query = """ FROM ActionItemPostSelectionDetail aips
                WHERE aips.id.actionItemPostId = :postingId """
        )
])
class ActionItemPostSelectionDetailReadOnly implements Serializable {

    @EmbeddedId
    PopulationSelectionKey id

    /**
     * VERSION: Optimistic lock token.
     */
    @Version
    @Column(name = "POST_VERSION")
    Long version

    /**
     * selection pidm
     */
    @Column(name = "POST_SELECT_PIDM")
    Long actionItemPostId

    /**
     * posting User Id
     */
    @Column(name = "POST_USER_ID")
    Long postingUserId

    /**
     *
     * @return
     */
    def static fetchSelectionIds( postingId ) {
        ActionItemPostSelectionDetail.withSession {session ->
            session.getNamedQuery( 'ActionItemPostSelectionDetail.fetchSelectionIds' )
                    .setLong( 'postingId', postingId )
                    .list()
        }
    }
}

@Embeddable
@ToString(includeNames = true, ignoreNulls = true)
@EqualsAndHashCode(includeFields = true)
class PopulationSelectionKey implements Serializable {
    @Column(name = 'POST_ID')
    Long actionItemPostId
    @Column(name = "SELECTION_ID")
    Long selectionId
}
